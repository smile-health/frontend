{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:packages": "cd packages/ui && npm run dev",
    "dev:web": "turbo dev --filter=web",
    "dev:wms": "turbo dev --filter=wms",
    "dev:storybook": "turbo dev --filter=storybook",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "compile-locales": "node compile-locales.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:storybook": "prettier --write \"apps/storybook/**/*.{js,ts,jsx,tsx,mdx}\"",
    "format:ui": "prettier --write \"packages/ui/**/*.{js,ts,jsx,tsx,mdx}\"",
    "test": "cd packages/ui && npm run test",
    "test:coverage": "cd packages/ui && npm run test:coverage",
    "test:update": "cd packages/ui && npm run test:update"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/object-hash": "^3.0.6",
    "i": "^0.3.7",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^2.2.3"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "smile-platform",
  "packageManager": "npm@10.7.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "dompurify": "^3.3.0",
    "react-number-format": "^5.4.3"
  }
}
